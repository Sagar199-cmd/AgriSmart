<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".ProfilePage">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bell_svgrepo_com"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>





    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/leaf_svgrepo_com"
        android:id="@+id/leaf"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/leaf"

        android:fontFamily="@font/poppins_bold"
        android:text="Profile"
        android:textColor="#38893C"
        android:textSize="24sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="200dp"
        android:id="@+id/cv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/maharastra"/>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cv1"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/poppins_medium"
        android:text="Divyanshu Karmakar"
        android:textColor="#525154"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:fontFamily="@font/poppins_medium"
        android:text="divyanshukarmakar@gmail.com"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/t4"
        android:textColor="#525154"
        android:textSize="15sp" />






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/t5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/c2"
        app:cardElevation="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f8f8f8"
        >

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/poppins_medium"
            android:text="Farming Statistics"
            android:textColor="#525154"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"

            android:fontFamily="@font/poppins_medium"
            android:text="Total Land: 150 Acres\nPrimary Crop: Potato\nAvg. Yield per Acre: 10.56 tons\nIrrigation Method: Center Pivot"
            android:textColor="#525154"
            android:textSize="18sp" />









    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c2"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp"
        card_view:cardBackgroundColor="@android:color/holo_red_dark">

        <TextView
            android:id="@+id/textSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Sign Out"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>








</RelativeLayout>